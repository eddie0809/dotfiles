# bar settings (input comes from i3blocks)
bar {
	font pango: Noto Sans Regular 10
	status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top
	tray_padding 0
	strip_workspace_numbers yes

	colors {
		separator          $purple
		background         $darkgray
		statusline         $lightbeige
		focused_workspace  $mediumbrown     $lightbrown   $black   $purple
		active_workspace   $lightblue      $mediumbrown $black $purple
		inactive_workspace $darkgrey       $darkgrey $darkgray       $purple
		urgent_workspace   $urgentred      $urgentred $lightbeige     $purple
	}
}
